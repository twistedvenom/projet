                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>PRODUCT ID</th>
                                <th>PRODUCT Name</th>
                                <th>PRODUCT Quantity</th>
                                <th>PRODUCT Descrip</th>
                                <th>PRODUCT PRICE</th>
                                <th>PRODUCT FILE</th>
                                <th>Actions</th>
                            </tr>
                            </tfoot>
