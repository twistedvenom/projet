{% extends "baseAdmin.html.twig" %}
{% block container %}
    <section class="content">
        <div class="row">
            <div class="col-12">
                <!-- /.card -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with default features</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>PRODUCT ID</th>
                                <th>PRODUCT Name</th>
                                <th>PRODUCT Quantity</th>
                                <th>PRODUCT Descrip</th>
                                <th>PRODUCT PRICE</th>
                                <th>PRODUCT FILE</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for i in product %}
                                <tr>
                                    <td>PRODUCT NÂ°: {{ i.id }}</td>
                                    <td>{{ i.nompr }}</td>
                                    <td>{{ i.quantity }}</td>
                                    <td>{{ i.descrip}}</td>
                                    <td>{{ i.prix}}</td>
