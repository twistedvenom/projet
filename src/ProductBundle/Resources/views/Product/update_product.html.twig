{% extends "baseAdmin.html.twig" %}
{% block container %}
    <div class="col-lg-12">
        <h1 class="page-header">Products Forms</h1>
    </div>
    {{ form_start(form) }}

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> Product Name </label>
        {{ form_widget(form.nompr,{'attr': {'class': 'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> Quantity</label>
        {{ form_widget(form.quantity,{'attr': {'class': 'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> Description</label>
        {{ form_widget(form.descrip,{'attr': {'class': 'form-control'}} )}}
    </div>

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> Price</label>
        {{ form_widget(form.prix,{'attr': {'class': 'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> Image</label>
        {{ form_widget(form.image,{'attr': {'class': 'form-control'}} )}}
    </div>

    {{ form_rest(form) }}

{% endblock %}