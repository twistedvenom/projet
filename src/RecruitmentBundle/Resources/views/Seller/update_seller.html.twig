{% extends "baseAdmin.html.twig" %}
{% block container %}
    <div class="col-lg-12">
        <h1 class="page-header">Seller Forms</h1>
    </div>
    {{ form_start(form) }}

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> Seller Name</label>
        {{ form_widget(form.sellername,{'attr': {'class': 'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Trade Register </label>
        {{ form_widget(form.rcs,{'attr': {'class': 'form-control'}} )}}
    </div>

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> TAX</label>
        {{ form_widget(form.taxnumber,{'attr': {'class': 'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> TVA</label>
        {{ form_widget(form.tva,{'attr': {'class': 'form-control'}} )}}
    </div>

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> SIREN</label>
        {{ form_widget(form.siren,{'attr': {'class': 'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> FAX</label>
        {{ form_widget(form.fax,{'attr': {'class': 'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> Phone Number</label>
        {{ form_widget(form.phonenumber,{'attr': {'class': 'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> Email</label>
        {{ form_widget(form.email,{'attr': {'class': 'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess"> License</label>
        {{ form_widget(form.image,{'attr': {'class': 'form-control'}} )}}
    </div>

    {{ form_rest(form) }}

{% endblock %}